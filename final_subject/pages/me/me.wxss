.Linn{

 width: 100%;

}


.Li{

  width: 100%;
  background-color: #EEE0E5;
  border: 1rpx solid #EEE0E5;
}

.Li_a{

 width: 100%;
 height: 400rpx;


}

.Li_b{

  width: 90%;
  height: 24%;
  display: flex;
  border: 2rpx solid white;
  border-radius: 4%;
  margin: auto;
  margin-bottom: 1%;
  /* z-index: 999; */
}

.Li_b image{

 width: 40%;
 height: 100%;
 border-radius: 4% 0 0 4%;
 border-right: 2rpx solid #EED2EE;
}

.Li_b textarea{

 width: 95%;
 height: 60%;
 font-size: 36rpx;
 padding: 20rpx 0 0 20rpx;
 /* border: 1px red solid; */
}


.Li_c{

 width: 90%;
 height: 48%;
 display: flex;
 /* border: 2px red solid; */
 margin: 2% auto;
}


.Li_d{
 flex-basis: 44%;
 width: 40%;
 height: 100%;
 display: flex;
 flex-direction: column;
 margin-left: 4%;
 /* border: 2rpx solid red; */
}

.Li_d image{

 width: 100%;
 height: 40%;
 border-radius: 4% 4% 0 0;
 border-bottom: 2rpx solid #EED2EE;
}

.Li_d textarea{

 width: 100%;
 height: 60%;
 font-size: 20px;
 padding: 20rpx 0 0 5rpx;
  /* border: 1px red solid;  */
}

.Li_e{
 width: 60%;
 height: 100%;
 display: flex;
 flex-direction: column;
 background-color: white;
 /* border: 1px red solid; */
 border-radius: 0 4% 4% 0;
}

.Li_e button{

 width: 48%;
 height: 28%;
 font-size: 28rpx;
 border-radius: 30rpx;
 border: 1px solid #1296DB;
 background-color: #1296DB; 
 color: white;
 margin-right: 5%;
}


.Li_f{

 width: 100%;
 height: 60%;
 background-color: white;
 border-radius: 0 0 4% 4%;
 position: relative;
 /* border: 1px red solid;  */
}

.Li_f button{

 width: 90%;
 height: 22%;
 font-size: 15px;
 border-radius: 40rpx;
 border: 1px solid #1296DB;
 background-color: #1296DB; 
 color: white;
 position: absolute;
 bottom: 1%;
 left: 5%;
}