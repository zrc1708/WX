/* template/musiclist-media/musiclist-media.wxss */
.musiclist-media-container{
  display: flex;
  margin: 10rpx 0;
}
.imgbox{
  width: 250rpx;
  height: 250rpx;
  position: relative;
}
.imgbox .musicImg{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.imgbox .authortext{
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  color: white;
  font-size: 25rpx;
}

.three-music{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 35rpx 0;
}

.three-music .music-item{
  margin-left: 20rpx;
  color: #666666;
  font-size: 28rpx;
}