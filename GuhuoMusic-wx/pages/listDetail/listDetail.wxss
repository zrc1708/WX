@import '../../template/one-music/one-music.wxss';

.music-main-container{
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.detail-container{
  display: flex;
  padding-top: 20px;
}
.img-container{
  flex: 1;
}
.detail-image{
  width: 80%;
  height: 80%;
  display: block;
  margin: 0 auto;
  border-radius: 10rpx;
}
.text-container{
  flex: 1;
  width: 0;
}
.text-container .tc-title{
  color: white;
  font-size: 40rpx;
}
.text-container .author{
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.text-container .author image{
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
}
.text-container .author text{
  color: rgb(230, 230, 230);
  margin-left: 10px;
}
.text-container .tc-desc{
  color: rgb(189, 187, 187);
  font-size: 27rpx;
}
/* 分享给微信好友 */
.share-container{
  text-align: center;
}
.share{
  background-color: rgba(255, 255, 255, 0.1);
  display: inline-block;
  padding: 10rpx 30rpx;
  color: white;
  border-radius: 30rpx;
  margin: 15px auto;
}
/* 歌曲列表 */
.list-container{
  flex: 1;
  border-radius: 20px 20px 0 0;
  background-color: white;
}
.playall{
  display: flex;
  align-items: center;
  margin-top: 15px;
  margin-left: 15px;
}
.playallicon{
  border: 2px solid #333333;
  border-radius: 50%;
  color: #333333;
  width: 45rpx;
  height: 45rpx;
  font-size: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.playall-text{
  color: #333333;
  font-size: 35rpx;
  margin-left: 10px;
}
.playall-length{
  color: #b3b3b3;
  font-size: 25rpx;
}